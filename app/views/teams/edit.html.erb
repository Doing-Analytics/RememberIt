<%= form_with model: @team do |f| %>

  <div>
    團隊名稱：
    <%= f.text_field :name %>
  </div>

    

  <div>
    關於你的團隊：
    <%= turbo_frame_tag "edit our team" do %>
      <%= f.text_field :description %>
      <%= f.button '更新關於' %>
    <% end %>
  </div>

  <div>
    <%= f.submit '更新' %>
  </div>

<% end %>